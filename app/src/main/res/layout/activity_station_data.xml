                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:textColor="#28282B"
                android:text="TextView"
                android:textSize="15dp"
                android:layout_below="@id/fuelType1Name1"/>

            <TextView
