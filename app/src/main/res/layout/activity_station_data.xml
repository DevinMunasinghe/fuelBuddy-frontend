<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StationData">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetailsID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:padding="8dp"
        android:background="@drawable/custom_edittext">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/DetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:text="Station Deatils"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/stationNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/stationName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:text="TextView"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/stationPhoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:layout_marginTop="10dp"
                android:layout_below="@+id/stationNameLabel"
                android:layout_marginStart="20dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/stationAvailablity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stationName1"

                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/fuelDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Fuel Deatils"
        android:textStyle="bold"
        android:layout_below="@id/cardDetailsID"
        android:layout_marginStart="40dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/fuelType1CardID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:padding="8dp"
        android:layout_below="@id/fuelDetailLabel"
        android:background="@drawable/custom_edittext">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fuelTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type : "
                android:layout_marginTop="10dp"
                android:textColor="#FF2222"
                android:layout_marginStart="20dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fuelTypeName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:textColor="#FF2222"
                android:text="TextView"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/arrivalTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival Time : "
                android:layout_marginTop="10dp"
                android:textColor="#957C7C"
                android:layout_marginStart="20dp"
                android:layout_below="@id/fuelTypeLabel"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/arrivalTimeVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"

                android:textColor="#957C7C"
                android:text="TextView"
                android:textSize="15dp"
                android:layout_below="@id/fuelTypeName1"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>