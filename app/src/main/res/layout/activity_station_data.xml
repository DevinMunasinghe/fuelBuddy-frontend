                android:text="Availability "
                android:layout_marginTop="10dp"
                android:textColor="#957C7C"
                android:layout_marginStart="225dp"
                android:textSize="20dp"
                android:textStyle="bold|italic"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

